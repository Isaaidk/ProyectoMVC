@model IEnumerable<WebApplication4.Models.Asignacion>

@{
    ViewData["Title"] = "Registrar Asignación";
}

<h1>Registrar Asignación</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Asignación</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdAsignacion" class="btn btn-warning btn-sm me-1">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IdAsignacion" class="btn btn-info btn-sm me-1">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.IdAsignacion" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
        </tr>
}
    </tbody>
</table>
